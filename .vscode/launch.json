    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/server/server.ts",
            "outFiles": [
                "${workspaceRoot}/dist/server/**/*.js",
                "${workspaceRoot}/dist/client/**/*.js"
			],
			"sourceMapPathOverrides": {
				"webpack:///*": "${workspaceRoot}/client/*"
			},
            "sourceMaps": true
        }
    ]
}
